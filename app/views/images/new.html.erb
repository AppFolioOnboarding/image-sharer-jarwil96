<h1>Add an image</h1>

<%= form_for @image, url: {action: 'create'} do |f| %>
  <%= @image.errors.full_messages.to_sentence %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :url %><br/>
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :tag_list, 'Tags' %><br/>
    <%= f.text_field :tag_list, value: f.object.tag_list.to_s %>
  </p>
  <%= f.submit %>
<% end %>

